{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",   // node modules
    "**/*.test.ts",   // unit tests
    "**/build",       // client and server production outcome
    "**/dist"         // library production outcome
  ]
}
